# Environment Configuration
# Copy this file to .env and fill in your values
# This file works for both local development and Docker

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Course Configuration
COURSE_TOPIC=Cell Biology

# Application Environment (optional)
# ENVIRONMENT=development

# API Configuration (optional - defaults are set)
# API_V1_STR=/api/v1
# PROJECT_NAME=Learno AI Teacher

# Rate Limiting (optional - defaults are set in config.py)
# RATE_LIMIT_REQUESTS_PER_SECOND=2.0
# RATE_LIMIT_CHECK_INTERVAL=0.1
# RATE_LIMIT_MAX_BURST=10

# Retry Policy (optional - defaults are set in config.py)
# RETRY_MAX_ATTEMPTS=3
# RETRY_INITIAL_INTERVAL=1.0
# RETRY_BACKOFF_FACTOR=2.0
# RETRY_MAX_INTERVAL=10.0

# CORS Origins (optional - for production)
# BACKEND_CORS_ORIGINS=["https://yourapp.com", "https://www.yourapp.com"]
